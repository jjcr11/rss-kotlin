<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".OnBoardingFragment2">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_rss_feed"
        android:text="@string/fabe_name"
        app:backgroundTint="@color/blue_light"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        app:icon="@drawable/ic_rss_feed"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mtb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="200dp"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:title="Sources"
        app:menu="@menu/top_app_bar_sources"
        android:elevation="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/common_default"
        android:text="Add sources by clicking on source button and then use the source bar"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>